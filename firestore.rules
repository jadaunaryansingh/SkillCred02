rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own sentiment analyses
    match /sentiments/{sentimentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
    
    // Allow users to read and write their own analytics events
    match /analytics/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
    
    // Allow authenticated users to create new documents in any collection
    // This is needed for initial document creation
    match /{collection}/{document} {
      allow create: if request.auth != null && 
        (collection == "sentiments" || collection == "analytics") &&
        request.resource.data.uid == request.auth.uid;
    }
    
    // Deny all other operations
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
